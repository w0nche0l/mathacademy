<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.dennis.mathacademy.ui.TeXView
        android:id="@+id/question_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight ="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:layout_weight="1">
			
            <LinearLayout 
                android:id = "@+id/choice1_border"
                android:background = "@drawable/border"
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:padding = "5dp">
	            <com.dennis.mathacademy.ui.TeXView
	            android:id="@+id/choice1_view"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background ="@color/red"/>
            </LinearLayout>
            
            <LinearLayout 
                android:id = "@+id/choice2_border"
                android:background = "@drawable/border"
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:padding = "5dp">
	            <com.dennis.mathacademy.ui.TeXView
		        android:id="@+id/choice2_view"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            
            <LinearLayout 
                android:id = "@+id/choice3_border"
                android:background = "@drawable/border"
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:padding = "5dp">
	            <com.dennis.mathacademy.ui.TeXView
		        android:id="@+id/choice3_view"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"/>
            </LinearLayout>
            
            
            <LinearLayout 
                android:id = "@+id/choice4_border"
                android:background = "@drawable/border"
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:padding = "5dp">
	            <com.dennis.mathacademy.ui.TeXView
		        android:id="@+id/choice4_view"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
